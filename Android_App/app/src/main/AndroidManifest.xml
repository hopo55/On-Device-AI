<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tensorflow.lite.transfer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Transfer"
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true" >

        <activity android:name="org.tensorflow.lite.transfer.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="org.tensorflow.lite.transfer.CollectData"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.DigitList"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.ModelList"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.Model"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.TrainData"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.TransferList"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.TrainModelList"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.ModelTest"
            android:screenOrientation="portrait"/>
        <activity android:name="org.tensorflow.lite.transfer.ModelTrainTest"
            android:screenOrientation="portrait"/>
    </application>

</manifest>